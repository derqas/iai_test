<div class="row" id="position_view" rel="{{ position.id }}">
    <div class="col-2" id="name">{{ position.name }}</div>
    <div class="col-2" id="unit">{{ position.unit }}</div>
    <div class="col-2" id="quantity">{{ position.quantity|number_format(3, '.', ',') }}</div>
    <div class="col-2" id="price">{{ position.price|number_format(2, '.', ',') }}</div>
    <div class="col-2" id="sum">{{ position.sum|number_format(2, '.', ',') }}</div>
    <div class="col-2">
        <button id="position_edit">Edit</button>
        <button id="position_delete">Delete</button>
    </div>
</div>
